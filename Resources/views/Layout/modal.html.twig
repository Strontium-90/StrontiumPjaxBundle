{% extends pjax_frame() %}
{% block content %}
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">{% block title %}{% endblock %}</h4>
    </div>
    {% set modal_body = block('modal_body') %}
    {% if modal_body is empty %}
        <div class="modal-body">
            {% block body %}{% endblock %}
        </div>
        <div class="modal-footer">
            {{ block('actions') }}
            {% block modal_close %}
                <button type="button" class="crm-btn-cancel" data-dismiss="modal" aria-hidden="true">Закрыть</button>
            {% endblock %}
        </div>
    {% else %}
        {% block modal_pre_body %}{% endblock %}
        <div class="modal-body">
            {{ modal_body|raw }}
        </div>
        <div class="modal-footer">
            {% block modal_footer %}{% endblock %}
            <button type="button" class="crm-btn-cancel" data-dismiss="modal" aria-hidden="true">Закрыть</button>
        </div>
        {% block modal_post_footer %}{% endblock %}
    {% endif %}
{% endblock %}
